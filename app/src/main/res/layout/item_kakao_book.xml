<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.example.exam01.network.response.Document" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    android:id="@+id/cl_layout"
    >
    <ImageView
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:id="@+id/iv_book"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="5dp"
        setUrlImg="@{item.thumbnail}"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_book"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/tv_title"
            android:text="@{item.title}"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cb_like"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"

        />
        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/cb_like"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/check_like"
            android:button="@null"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/tv_author"
            android:text="@{item.toStringAuthors()}"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/tv_content"
            android:text="@{item.contents}"
            android:textSize="10sp"
            android:maxLength="300"
            android:maxLines="8"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_author"
            app:layout_constraintBottom_toTopOf="@+id/tv_price"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="â‚© "
            android:id="@+id/tv_price_symbol"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/tv_price"
            android:text="@{String.valueOf(item.price)}"
            app:layout_constraintLeft_toRightOf="@id/tv_price_symbol"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>